{
  "env": {
      "browser": true,
      "es6": true,
      "amd": true,
      "node": true
  },
  "parser": "babel-eslint",
  // "extends": "eslint:recommended",
  "globals": {
      "define": true,
      "$": true,
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },

  "plugins": [
      "react"
  ],
  "rules": {
      "indent": "off",
      "no-console": "off",
      "no-redeclare": 1,
      "no-unused-vars":0,
      "no-class-assign":0,
      "no-irregular-whitespace": "warn"
  }
}